<% movies.map(movie=> { %>
    <div class="grid grid-row-3 place-items-center text-center w-[100%] max-h-[70%] p-8">
        <img class="max-w-[500px] min-w-60 px-8 object-cover" src="<%= movie.attributes.image.url %>" alt="">
        <h2 class="sm:text-lg lg:text-xl xl:text-4xl font-bold text-white my-4">
            <%= movie.attributes.title %>
        </h1>
        <% if (showIntro) { %>
        <p class="text-2xl text-white w-2/3 py-4">
            <%= movie.attributes.intro %>
        </p>
        <% } %>

        <a class="px-4 py-2 mt-4 text-2xl font-bold text-white bg-secondary rounded hover:bg-secondary-hover" href="<%= href + movie.id %>"><%= hrefText %></a>

        <% if (showReviews) {%>
            <div id="reviews" class="flex flex-col justify-between rounded-xl max-w-3xl w-9/12 min-h-[540px] bg-secondary my-10">
                <h2 class="text-primary text-3xl pt-3 font-bold">Recensioner</h2>
                <ul id="reviews__list" class="reviewsListHeight flex flex-col align-start gap-1 p-3 mb-3">
                </ul>
                <div class="grid grid-cols-2 pb-3">
                    <button id="reviews__next" class="col-start-2 col-end-3 row-span-1 justify-self-center self-center px-4 py-2 mx-3 text-xl w-36 font-bold text-white bg-primary rounded ">Nästa sida</button>
                    <button id="reviews__prev" class="col-start-1 col-end-2 row-start-1 justify-self-center self-center px-4 py-2 mx-3  text-xl w-36 font-bold text-white bg-primary rounded ">Bakåt</button>
                </div>
            </div>
            <% } %>
    </div>
<% }) %>